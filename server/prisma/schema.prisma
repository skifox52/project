// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  DOCTOR
  ADMIN
}

enum Gender {
  MALE
  FEMALE
}

model user {
  id String @id @default(uuid())
  email String @unique()
  phoneNumber String @unique()
  password String
  firstName String
  lastName String
  gender Gender
  dateOfBirth DateTime
  adress String
  avatar String
  role UserRole
}